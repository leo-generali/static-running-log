{% macro key(activityKey) %}
  <nav class='mt-16'>
    <h2 class='font-semibold text-2xl mb-8'>Key:</h2>
    <div class='grid grid-cols-6 gap-4'>
      {% for key in activityKey %}
        <div class='bg-{{ key.bgColor }} h-8 rounded'>
        </div>
        <p class='text-left text-sm uppercase rounded font-semibold flex items-center'>
          = {{ key.activity }}
        </p>
      {% endfor %}
    </div>
  </nav>
{% endmacro %}

{% macro days(count = 8) %}
  <div class='grid grid-cols-{{ count }} gap-2'>
    {% set daysOfWeek = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday' ] %}
    {% if count === 8 %}<div class="col-span-1"></div>{% endif %}
    {% for dayOfWeek in daysOfWeek %}
      <div class="col-span-1 text-center">
        <span class='uppercase font-semibold text-xs'>{{ dayOfWeek }}</span>
      </div>
    {% endfor %}
  </div>
{% endmacro %}

{% macro seperator() %}
  <div class='h-px w-full bg-strava my-8'></div>
{% endmacro %}